<h1> New Super Kick Ass List </h1>

<% if @list.errors.any? %>
<h3>Oops, errors happened. Please get your shit together and try again:</h3>
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @list do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
